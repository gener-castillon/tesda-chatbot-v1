<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Form</title>

    <!-- Load Bootstrap and JQuery -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Load Custom CSS and JS -->
    <link rel="stylesheet" href="/css/style.css">
    <script>
        let appId = "<%= appId %>";
    </script>
    <script src="/js/application.js"></script>
    
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="text-center title">
                    <span>Application Form</span>
                </div>
                <input type="text" id="psid" hidden>
                <div class="form-group">
                    <label for="fn">First Name<span style="color: red;"> * </span></label>
                    <input type="text" id="fn" class="form-control">
                    <div class="invalid-feedback">Please fill out you first name.</div>
                </div>
                <div class="form-group">
                    <label for="mn">Middle Name<span style="color: red;"> * </span></label>
                    <input type="text" id="mn" class="form-control">
                    <div class="invalid-feedback">Please fill out you middle name.</div>
                </div>
                <div class="form-group">
                    <label for="ln">Last Name<span style="color: red;"> * </span></label>
                    <input type="text" id="ln" class="form-control">
                    <div class="invalid-feedback">Please fill out you last name.</div>
                </div>
                <br/>
                <button class="btn btn-primary" id="btnApply">Submit</button>
            </div>
        </div>
    </div>
    <br/>
    <footer>
        <div class="text-center">
            <div class="">
                <span class="text-sm f1">&copy; TESDA Lyceum of Alabang</span>
                <p class="text-sm f2">
                    Powered by Lyceum of Alabang Inc. Technology Department
                </p>
            </div>
        </div>
    </footer>
</body>
</html>